<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resume</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        line-height: 1.6;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
      }
      h1,
      h2 {
        margin: 0;
        padding: 0;
      }
      h1 {
        font-size: 28px;
        font-weight: bold;
      }
      h2 {
        font-size: 22px;
        margin-top: 30px;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
      }
      .header {
        text-align: center;
      }
      .header p {
        margin: 5px 0;
      }
      .section {
        margin-top: 20px;
      }
      .list {
        margin: 0;
        padding: 0;
        list-style: none;
      }
      .list li {
        margin-bottom: 10px;
      }
      .project-item {
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Personal Details -->
      <div class="header">
        <h1><%= personalDetails.fullName %></h1>
        <p>
          Email: <%= personalDetails.email %> | Phone: <%=
          personalDetails.phoneNumber %>
        </p>
        <p>Address: <%= personalDetails.address %></p>
        <p>
          LinkedIn:
          <a href="<%= personalDetails.linkedIn %>"
            ><%= personalDetails.linkedIn %></a
          >
          | GitHub:
          <a href="<%= personalDetails.github %>"
            ><%= personalDetails.github %></a
          >
        </p>
        <p>
          Portfolio:
          <a href="<%= personalDetails.portfolio %>"
            ><%= personalDetails.portfolio %></a
          >
        </p>
      </div>

      <!-- Professional Summary -->
      <div class="section">
        <h2>Professional Summary</h2>
        <p><%= summary %></p>
      </div>

      <!-- Education -->
      <div class="section">
        <h2>Education</h2>
        <ul class="list">
          <% education.forEach(function(item) { %>
          <li>
            <strong><%= item.degree %></strong><br />
            <%= item.institution %>, <%= item.location %><br />
            Graduation Year: <%= item.graduationYear %> | GPA: <%= item.GPA %>
          </li>
          <% }) %>
        </ul>
      </div>

      <!-- Work Experience -->
      <div class="section">
        <h2>Work Experience</h2>
        <ul class="list">
          <% workExperience.forEach(function(item) { %>
          <li>
            <strong><%= item.jobTitle %></strong> | <%= item.companyName %>, <%=
            item.location %> <br />
            <%= item.startDate %> - <%= item.endDate %>
            <ul>
              <% item.responsibilities.forEach(function(resp) { %>
              <li><%= resp %></li>
              <% }) %>
            </ul>
          </li>
          <% }) %>
        </ul>
      </div>

      <!-- Skills -->
      <div class="section">
        <h2>Skills</h2>
        <ul class="list">
          <% skills.forEach(function(skill) { %>
          <li><%= skill %></li>
          <% }) %>
        </ul>
      </div>

      <!-- Certifications -->
      <div class="section">
        <h2>Certifications</h2>
        <ul class="list">
          <% certifications.forEach(function(cert) { %>
          <li>
            <%= cert.name %> - <%= cert.organization %> | <%= cert.date %>
          </li>
          <% }) %>
        </ul>
      </div>

      <!-- Projects -->
      <div class="section">
        <h2>Projects</h2>
        <% projects.forEach(function(project) { %>
        <div class="project-item">
          <strong><%= project.projectName %></strong><br />
          <%= project.description %><br />
          <strong>Technologies:</strong> <%= project.technologies.join(", ")
          %><br />
          <a href="<%= project.link %>"><%= project.link %></a>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
