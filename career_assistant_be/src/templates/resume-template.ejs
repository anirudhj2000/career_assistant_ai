<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resume</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        line-height: 1.6;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
      }
      h1,
      h2 {
        margin: 0;
        padding: 0;
      }
      h1 {
        font-size: 28px;
        font-weight: bold;
      }
      h2 {
        font-size: 22px;
        margin-top: 30px;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
      }
      .header {
        text-align: center;
      }
      .header p {
        margin: 5px 0;
      }
      .section {
        margin-top: 20px;
      }
      .list {
        margin: 0;
        padding: 0;
        list-style: none;
      }
      .list li {
        margin-bottom: 10px;
      }
      .project-item {
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Personal Details -->
      <% if (personalDetails) { %>
      <div class="header">
        <% if (personalDetails.fullName) { %>
        <h1><%= personalDetails.fullName %></h1>
        <% } %> <% if (personalDetails.email || personalDetails.phoneNumber) {
        %>
        <p>
          <% if (personalDetails.email) { %>Email: <%= personalDetails.email %>
          <% } %> <% if (personalDetails.phoneNumber) { %> | Phone: <%=
          personalDetails.phoneNumber %> <% } %>
        </p>
        <% } %> <% if (personalDetails.address) { %>
        <p>Address: <%= personalDetails.address %></p>
        <% } %> <% if (personalDetails.linkedIn || personalDetails.github) { %>
        <p>
          <% if (personalDetails.linkedIn) { %> LinkedIn:
          <a href="<%= personalDetails.linkedIn %>"
            ><%= personalDetails.linkedIn %></a
          >
          <% } %> <% if (personalDetails.github) { %> | GitHub:
          <a href="<%= personalDetails.github %>"
            ><%= personalDetails.github %></a
          >
          <% } %>
        </p>
        <% } %> <% if (personalDetails.portfolio) { %>
        <p>
          Portfolio:
          <a href="<%= personalDetails.portfolio %>"
            ><%= personalDetails.portfolio %></a
          >
        </p>
        <% } %>
      </div>
      <% } %>

      <!-- Professional Summary -->
      <% if (summary) { %>
      <div class="section">
        <h2>Professional Summary</h2>
        <p><%= summary %></p>
      </div>
      <% } %>

      <!-- Education -->
      <% if (education && education.length > 0) { %>
      <div class="section">
        <h2>Education</h2>
        <ul class="list">
          <% education.forEach(function(item) { %>
          <li>
            <% if (item.degree) { %><strong><%= item.degree %></strong><br /><%
            } %> <% if (item.institution) { %><%= item.institution %>, <% } %>
            <% if (item.location) { %><%= item.location %><br /><% } %> <% if
            (item.graduationYear || item.GPA) { %> Graduation Year: <%=
            item.graduationYear %> | GPA: <%= item.GPA %> <% } %>
          </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <!-- Work Experience -->
      <% if (workExperience && workExperience.length > 0) { %>
      <div class="section">
        <h2>Work Experience</h2>
        <ul class="list">
          <% workExperience.forEach(function(item) { %>
          <li>
            <% if (item.jobTitle) { %><strong><%= item.jobTitle %></strong> <% }
            %> <% if (item.companyName || item.location) { %> | <%=
            item.companyName %>, <%= item.location %> <% } %><br />
            <% if (item.startDate || item.endDate) { %> <%= item.startDate %> -
            <%= item.endDate %> <% } %> <% if (item.responsibilities &&
            item.responsibilities.length > 0) { %>
            <ul>
              <% item.responsibilities.forEach(function(resp) { %>
              <li><%= resp %></li>
              <% }) %>
            </ul>
            <% } %>
          </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <!-- Skills -->
      <% if (skills && skills.length > 0) { %>
      <div class="section">
        <h2>Skills</h2>
        <ul class="list">
          <% skills.forEach(function(skill) { %>
          <li><%= skill %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <!-- Certifications -->
      <% if (certifications && certifications.length > 0) { %>
      <div class="section">
        <h2>Certifications</h2>
        <ul class="list">
          <% certifications.forEach(function(cert) { %>
          <li>
            <%= cert.name %> - <%= cert.organization %> | <%= cert.date %>
          </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <!-- Projects -->
      <% if (projects && projects.length > 0) { %>
      <div class="section">
        <h2>Projects</h2>
        <% projects.forEach(function(project) { %>
        <div class="project-item">
          <% if (project.projectName) { %><strong
            ><%= project.projectName %></strong
          ><br /><% } %> <% if (project.description) { %><%= project.description
          %><br /><% } %> <% if (project.technologies &&
          project.technologies.length > 0) { %>
          <strong>Technologies:</strong> <%= project.technologies.join(", ")
          %><br />
          <% } %> <% if (project.link) { %><a href="<%= project.link %>"
            ><%= project.link %></a
          ><% } %>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
  </body>
</html>
